{
    // Configuración de depuración para proyecto Python estructurado (src/, utils/, etc.)
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Proyecto3",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}